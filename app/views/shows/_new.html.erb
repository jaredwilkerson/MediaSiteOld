
  <div class="new-entry">
    <p style="font-weight:bold">Add A Show</p>

    <%@show = Show.new%>

    <% form_for(@show) do |f| %>
      <%= f.error_messages %>

      <p>
        <%= f.label :title %>
        <%= f.text_field :title, :size => 15%>
      </p>
      <p>
        <%= f.label :picture %>
        <%= f.text_field :picture, :size=>20 %>
      </p>
      <p>
        <%= f.label :location %>
        <%= f.text_field :location, :size=>20 %>
      </p>
      <p>
        <%= f.label :description %><br />
        <%= f.text_area :description, :size => "40x5" %>
      </p>

      <p>
        <%= f.submit 'Add' %>
      </p>
    <% end %>
  </div>  
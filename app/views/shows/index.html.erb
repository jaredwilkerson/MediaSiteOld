<h1>Listing shows</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Picture</th>
  </tr>

<% @shows.each do |show| %>
  <tr>
    <td><%=h show.title %></td>
    <td><%=h show.description %></td>
    <td><%=h show.picture %></td>
    <td><%= link_to 'Show', show %></td>
    <td><%= link_to 'Edit', edit_show_path(show) %></td>
    <td><%= link_to 'Destroy', show, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New show', new_show_path %>
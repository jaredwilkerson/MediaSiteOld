
  <div class="new-entry">
    <p style="font-weight:bold">Add A Song</p>

    <%@song = Song.new%>

    <% form_for(@song) do |f| %>
      <%= f.error_messages %>

      <p>
        <%= f.label :title %>
        <%= f.text_field :title, :size => 15%>

        <%= f.label :year %>
        <%= f.text_field :year, :size => 5%>
      </p>
      <p>
        <%= f.label :genre %>
        <%= f.text_field :genre, :size => 15%>
      </p>
      <p>
        <%= f.label :picture %>
        <%= f.text_field :picture, :size=>20 %>
      </p>
      <p>
        <%= f.label :location %>
        <%= f.text_field :location, :size=>20 %>
      </p>

      <p>
        <%= f.submit 'Add' %>
      </p>
    <% end %>
  </div>  
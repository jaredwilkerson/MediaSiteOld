
  <div class="new-entry">
    <p style="font-weight:bold">Add A Movie</p>

    <%@movie = Movie.new%>

    <% form_for(@movie) do |f| %>
      <%= f.error_messages %>

      <p>
        <%= f.label :title %>
        <%= f.text_field :title, :size => 15%>

        <%= f.label :year %>
        <%= f.text_field :year, :size => 5%>
      </p>
      <p>
        <%= f.label :picture %>
        <%= f.text_field :picture, :size=>20 %>
      </p>
      <p>
        <%= f.label :location %>
        <%= f.text_field :location, :size=>20 %>
      </p>
      <p>
        <%= f.label :description %><br />
        <%= f.text_area :description, :size => "40x5" %>
      </p>

      <p>
        <%= f.submit 'Create' %>
      </p>
    <% end %>
  </div>  
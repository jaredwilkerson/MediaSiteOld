<div class="movie-maintenance">
<h4>New movie</h4>

<%@movie = Movie.new%>

<% form_for(@movie) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title, :size => 15%>

    <%= f.label :year %>
    <%= f.text_field :year, :size => 5%>

    <%= f.label :picture %>
    <%= f.text_field :picture, :size=>20 %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :size => "50x8" %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

</div>
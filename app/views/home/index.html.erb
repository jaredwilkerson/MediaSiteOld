<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <style>
      div.header
      {
        /*border:1px solid black;*/
        width:100%;
        height:60px;
        position:absolute;
      }

      div.content-row
      {
        /*border:1px solid black;*/
        width:100%;
        position:relative;
        top:60px;
      }

      div.col-wrapper
      {
        /*border:1px solid black;*/
        width: 750px;
        margin:0 auto;
      }     
      
      div.middle-col
      {
        /*border:1px solid black;*/
        height:800px;
        width:750px;
      }

      div.content-link
      {
        /*border:1px solid black;*/
        width:250px;
        height:40px;
        float:left;
        background:gray;
      }

      div.content-links
      {
        /*border:1px solid black;*/
        clear:both;
        text-align:center;
        width:750px;
      }

      div.display-window
      {
        /*border:1px solid black;*/
        background:black;
        position:relative;
        top:40px;
        width:750px;
        height:400px;
      }

      div.content-columns
      {
        /*border:1px solid black;*/
        width:750px;
        position:relative;
        top:40px;
        float:left;
      }

      div.movie-column
      {
        /*border:1px solid black;*/
        background:green;
        width:250px;
        height:400px;
        float:left;
      }

      div.show-column
      {
        /*border:1px solid black;*/
        background:red;
        width:250px;
        height:400px;
        float:left;
      }

      div.music-column
      {
        /*border:1px solid black;*/
        background:yellow;
        width:250px;
        height:400px;
        float:left;
      }

      
    </style>
    <!--
     div.left-col
      {
        border:1px solid black;
        height:600px;
        float:left;
      }
            div.right-col
      {
        border:1px solid black;
        height:600px;
        float:right;
      }
      -->
  </head>
  <body>
      <div class="header"></div><!this is the header row>
        <div class="content-row">
          <div class="col-wrapper">
            <!-- <div class="left-col"></div><!this is the left column> -->
            <div class="middle-col"><!the middle column with all the "stuff">
                <div class="content-links"><!the first row with links to the content pages>
                  <div class="content-link"><p>Movies</p></div>
                  <div class="content-link"><p>Shows</p></div>
                  <div class="content-link"><p>Music</p></div>
                </div>
                <div class="display-window"><!the second row containing the display window>
                </div>
                <div class="content-columns" style="text-align:center"><!the third row containing the content columns>
                  <div class="movie-column"><h3>Movies</h3></div>
                  <div class="show-column"><h3>Shows</h3></div>
                  <div class="music-column"><h3>Music</h3></div>
                </div>
            </div>
            <!--<div class="right-col"></div><!this is the right column> -->
          </div>
        </div>
      <div class="footer"></div><!this is the footer>
  </body>
</html>